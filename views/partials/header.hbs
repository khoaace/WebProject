<div class="header">
    <div class="container">
        <div class="head">
            <div class=" logo">
                <a href="/"><img src="/images/logo.png" alt=""></a>
            </div>
        </div>
    </div>
    <div class="header-top">
        <div class="container">
            <div class="col-sm-5 col-md-offset-2  header-login">
                <ul >
                    {{#if user}}
                    {{else}}
                        <li><a href="/login"> <b class="glyphicon glyphicon-log-in"></b> Đăng nhập</a></li>
                        <li><a href="/signup"><b class="glyphicon glyphicon-new-window"> </b> Đăng ký</a></li>
                    {{/if}}

                    <li><a href="/todolist"><b class="glyphicon glyphicon-new-window"> </b> Bảng chức năng đồ án</a></li>

                </ul>

            </div>

            <div class="col-sm-5 header-social">
                <ul >
                    <li><a href="#"><i></i></a></li>
                    <li><a href="#"><i class="ic1"></i></a></li>
                    <li><a href="#"><i class="ic2"></i></a></li>
                    <li><a href="#"><i class="ic3"></i></a></li>
                    <li><a href="#"><i class="ic4"></i></a></li>
                </ul>

            </div>
            <div class="clearfix"> </div>
        </div>
    </div>

    <div class="container">

        <div class="head-top">

            <div class="col-sm-8 col-md-offset-2 h_menu4">
                <nav class="navbar nav_bottom " role="navigation">

                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header nav_2">
                        <button type="button" class="navbar-toggle collapsed navbar-toggle1" data-toggle="collapse" data-target="#bs-megadropdown-tabs">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
                        <ul class="nav navbar-nav nav_1">
                            <li><a class="color1" href="/">Trang chủ</a></li>

                            <li class="dropdown mega-dropdown active">
                                <a class="color1" href="#" class="dropdown-toggle" data-toggle="dropdown">Loại Sản Phẩm<span class="caret"></span></a>
                                <div class="dropdown-menu ">
                                    <div class="menu-top">
                                        <div class="col1">
                                            <div class="h_nav">
                                                <h4>Phân loại sản phẩm</h4>
                                                <ul>
                                                    {{#each loai}}
                                                        <li><a href="/category/loai/{{this._id}}/"> ▶{{this.ten}}</a></li>
                                                    {{/each}}
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col1">
                                            <div class="h_nav">
                                                <h4>Phân loại theo giá</h4>
                                                <ul>

                                                    <li><a href="/category/sort/inc"> ▶Tăng dần</a></li>
                                                    <li><a href="/category/sort/dec"> ▶Giảm dần</a></li>

                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col1">
                                            <div class="h_nav">
                                                <h4>Phân loại nhãn hiệu</h4>
                                                <ul>
                                                    {{#each brand}}
                                                        <li><a href="/brand/{{this._id}}/"> ▶{{this.ten}}</a></li>
                                                    {{/each}}
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col5">
                                            <img src="/images/me.png" class="img-responsive" alt="">
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </li>

                            {{#if user}}
                                <li class="dropdown mega-dropdown active">
                                    <a class="color1" href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span>Xin chào : <strong>{{user.fullname}}</strong><span class="caret"></span></a>
                                    <div class="dropdown-menu ">
                                        <div class="menu-user">
                                            <div class="col1">
                                                <div class="h_nav">
                                                    <ul>
                                                        {{#if user.mod}}
                                                            <li><a href="/dashboard"> <h5><span class="glyphicon glyphicon-level-up"></span> Bảng điểu khiển</h5></a></li>
                                                        {{/if}}
                                                        <li><a href="/profile"> <h5><span class="glyphicon glyphicon-edit"></span> Chỉnh sửa thông tin</h5></a></li>
                                                        <li><a href="/logout"> <h5><span class="glyphicon glyphicon-log-out"></span> Đăng xuất</h5></a></li>


                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                </li>


                            {{/if}}
                            <li><a class="color4" data-toggle="modal" data-target="#myModal"><label><span class="glyphicon glyphicon-shopping-cart"></span> Giỏ hàng <span class="badge" id="countProduct">0</span></label></a></li>
                            <!-- Modal Checkout -->
                            <div id="myModal" class="modal fade" role="dialog">
                                <div class="modal-dialog">

                                    <!-- Modal content-->
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title"><center><strong>Giỏ hàng</strong></center></h4>
                                        </div>
                                       <table class="table table-striped" id="productTable">
                                           <tr>
                                               <th>Tên sản phẩm</th>
                                               <th>Số lượng</th>
                                               <th>Giá</th>
                                               <th>Xoá</th>
                                           </tr>
                                       </table>
                                        <hr>
                                       <div class="price-sum">Tổng tiền : <span id="yourPrice">0</span> VND</div>
                                        <br>
                                        <br>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-warning"  id="resetProduct">Xoá hết sản phẩm</button>
                                            <button type="button" class="btn btn-success" data-dismiss="modal"  onclick="window.location.href='/checkout'">Thanh toán</button>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <!--End Model checkout-->

                        </ul>
                    </div><!-- /.navbar-collapse -->

                </nav>
            </div>
            <div class="col-sm-2 search-right">
                <ul class="heart">
                    <li><a class="play-icon popup-with-zoom-anim" href="#small-dialog"><i class="glyphicon glyphicon-search icon-search"> </i></a></li>
                </ul>
                <div class="clearfix"> </div>

                <!---pop-up-box---->
                <link href="/stylesheets/popuo-box.css" rel="stylesheet" type="text/css" media="all"/>
                <script src="/javascripts/jquery.magnific-popup.js" type="text/javascript"></script>
                <!---//pop-up-box---->
                <div id="small-dialog" class="mfp-hide">
                    <form method="get" action="/search">
                    <div class="search-top">
                        <div class="login-search">

                                <input type="submit" value="">
                                <input type="text" name="search" id="search" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Tìm kiếm tên sản phẩm. ';}">

                        </div>
                      <br>

                        <h4>Tìm kiếm nâng cao</h4><hr>
                        <div class="form-group" style="text-align: left;">
                            <strong>Nhãn hiệu :</strong>
                        {{#each brand}}
                        <label class="radio-inline">
                            <input type="radio" name="idBrand" id="idBrand" value="{{this._id}}">{{this.ten}}
                        </label>
                        {{/each}}
                        <br>
                            <hr>
                            <strong>Loại :</strong>
                        {{#each loai}}
                            <label class="radio-inline">
                                <input type="radio" name="idLoai" id="idLoai" value="{{this._id}}">{{this.ten}}
                            </label>
                        {{/each}}
                        <br><hr>
                        <strong>Giá :</strong>
                            <label class="radio-inline">
                                <input type="radio" name="idGia" id="idGia" value="inc">Tăng dần
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="idGia" id="idGia" value="dec">Giảm dần
                            </label>
                        </div>

                    </div>
                    </form>
                </div>
                <script>
                    $(document).ready(function() {
                        $("form").submit(function(event){
                            //event.preventDefault();
                        });

                        $('.popup-with-zoom-anim').magnificPopup({
                            type: 'inline',
                            fixedContentPos: false,
                            fixedBgPos: true,
                            overflowY: 'auto',
                            closeBtnInside: true,
                            preloader: false,
                            midClick: true,
                            removalDelay: 300,
                            mainClass: 'my-mfp-zoom-in'
                        });

                    });
                </script>
                <!----->
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>