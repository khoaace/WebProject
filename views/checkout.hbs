                    <input  name="xuatxu" type="text" id="diachinhanhang" placeholder="Nhập địa chỉ người nhận" class="form-control input-md" required="" oninvalid="this.setCustomValidity('Chưa nhập địa chỉ người nhận')" oninput="setCustomValidity('')">
