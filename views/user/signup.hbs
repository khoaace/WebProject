<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Đăng kí</h3>
                </div>
                {{#if hasErrors}}
                    <div class="alert alert-danger">
                        {{#each messages}}
                            <p>{{this}}</p>
                        {{/each}}
                    </div>

                {{/if}}
                <div class="panel-body">
                    <form accept-charset="UTF-8" role="form" method="post" action="/user/signup">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Tên đăng nhập" id="email" name="email" >
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" placeholder="Mật khẩu" id="password" name="password">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me"> Lưu mật khẩu
                                </label>
                            </div>
                            <!--Mã Token để kiểm tra và xác thực-->
                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Đăng kí">
                        </fieldset>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>