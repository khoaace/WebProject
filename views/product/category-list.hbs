{{#if message}}
    <div class="alert {{message.[0]}}">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        {{message.[1]}}
    </div>
{{/if}}

<button data-toggle="collapse" data-target="#demo" class="btn-success">+</button>

<div id="demo" class="collapse">
    <form method="post" action="/dashboard/category/add">
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Tên loại sản phẩm</label>
            <div class="col-md-4">
                <input id="textinput" name="ten" type="text" placeholder="" class="form-control input-md"  required="" oninvalid="this.setCustomValidity('Chưa nhập tên')" oninput="setCustomValidity('')">
            </div>
        </div>
        <button type="submit" class="btn3d btn btn-success">Thêm mới</button>
    </form>
</div>
<form method="post" action="/dashboard/category/select-delete">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-list"></span>Danh sách loại sản phẩm
            <div class="btn-group pull-right">
                <button type="submit" class="btn-danger">Xoá nhiều mục</button>
            </div>
        </div>

        <div class="panel-body">
            <ul class="list-group">
                    {{# each loai}}
                        {{# each this}}
                            <li class="list-group-item">
                                <div class="checkbox">
                                    <input type="checkbox" name="checkbox" value="{{this._id}}" />
                                    <label>
                                        <strong>{{this.ten}}</strong>
                                    </label>

                                </div>
                                <div class="pull-right action-buttons">
                                    <a data-toggle="modal" data-target="#{{this._id}}_edit"><span class="glyphicon glyphicon-pencil"></span></a>
                                    <a class="trash" data-toggle="modal" data-target="#{{this._id}}_delete"><span class="glyphicon glyphicon-trash"></span></a>
                                    <!-------- Dialog Delete-------------->
                                    <div id="{{this._id}}_delete" class="modal fade" role="dialog">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Xoá loại sản phẩm</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Bạn có chắc chắn xoá {{this.ten}}. Mọi sản phẩm thuộc loại này sẽ bị xoá.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <a href="/dashboard/category/delete/{{this._id}}"> <button type="button" class="btn-danger btn">Xoá</button></a>
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Huỷ</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--------- End Dialog Delete---------->
                                    <!-------- Dialog Edit-------------->
                                    <div id="{{this._id}}_edit" class="modal fade" role="dialog">
                                        <div class="modal-dialog">
                                            <form method="post" action="/dashboard/category/edit" class="form-horizontal">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Chỉnh sửa loại sản phẩm</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label class="col-md-4 control-label" for="textinput">Tên loại sản phẩm</label>
                                                        <div class="col-md-4">
                                                            <input id="textinput" name="ten" type="text" placeholder="" class="form-control input-md"  required="" oninvalid="this.setCustomValidity('Chưa nhập tên')" oninput="setCustomValidity('')" value="{{this.ten}}">
                                                        </div>
                                                    </div>
                                                </div>
                                                <input name="id" value="{{this._id}}" type="hidden">
                                                <div class="modal-footer">
                                                     <button type="submit" class="btn-warning btn">Cập nhật</button>
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Huỷ</button>
                                                </div>
                                            </div>
                                            </form>
                                        </div>
                                    </div>
                                    <!--------- End Dialog Edit---------->
                                </div>
                            </li>
                         {{/each}}
                    {{/each}}
            </ul>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-6">
                    <h6>
                        Tổng sản phẩm <span class="label label-info">{{loai_count}}</span></h6>
                </div>
                <div class="col-md-6">
                    <ul class="pagination pagination-sm pull-right">
                        {{#each pages}}
                            <li class="{{this.[2]}}"><a href="{{this.[1]}}/page/{{this.[0]}}">{{this.[0]}}</a></li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</form>

