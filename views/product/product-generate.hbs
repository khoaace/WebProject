<form class="form-horizontal" method="post">
    <fieldset>
        <!-- Form Name -->

        <center> <legend>Phát sinh sản phẩm</legend></center>
        {{#if message}}
            <div class="alert {{message.[0]}}">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {{message.[1]}}
            </div>
        {{/if}}

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="selectbasic">Chọn loại</label>
            <div class="col-md-4">
                <select id="selectbasic" name="loai" class="form-control">
                    {{# each loai}}
                        {{#if this.ten}}
                            <option value="{{this._id}}">{{this.ten}}</option>
                        {{/if}}
                    {{/each}}
                </select>
            </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="selectbasic">Chọn nhãn hiệu</label>
            <div class="col-md-4">
                <select id="selectbasicbrand" name="brand" class="form-control">
                    {{# each brandlist}}
                        {{#if this.ten}}
                            <option value="{{this._id}}">{{this.ten}}</option>
                        {{/if}}
                    {{/each}}
                </select>
            </div>
        </div>


        <!-- Number input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="numberforgen_textinput">Số lượng</label>
            <div class="col-md-4">
                <input id="numberforgen_textinput" name="count" min='0' type="number" value="0" class="form-control input-md">
            </div>
        </div>
        <center>
            <input id="sm_product_gen" class="btn3d btn btn-success btn-lg" value="Phát sinh sản phẩm">
        </center>
    </fieldset>

</form>
