<div class="row">
    <!--Khung thứ 2-->
    <div class="col-md-12">
        <div class="row">
        {{#if products}}
        {{# each products}}
            {{# each this}}
            <div class="col-md-3 col-sm-6">
                <div class="products">
                    <a href="/product/detail/{{this._id}}"><img src="{{this.hinhanh.[0]}}" alt="Product Name" class="thumbnail"></a>
                    <div class="productname">
                        {{this.ten}}
                    </div>

                    <h4 class="price">{{formatNumber this.gia num}} VND</h4>
                    <div class="button_group">
                        <button class="button_buy" type="button" onclick="window.location.href='/product/detail/{{this._id}}'">
                            Xem chi tiết
                        </button>
                    </div>
                </div>
            </div>
            {{/each}}
        {{/each}}
        {{else}}
            <div class="alert alert-danger">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                Không tìm thấy sản phẩm .{{#unless loai}} Nếu muốn phát sinh ngẫu nhiên . Click vào <a href="/product/generate">đây</a>  để phát sinh sản phẩm.{{/unless}}
            </div>
        {{/if}}
        </div>
        <div class="row">
            <div class="col-md-9">
                <ul class="pagination">
                    {{#each pages}}
                        <li><a href="{{this.[1]}}/page/{{this.[0]}}">{{this.[0]}}</a></li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>


<!--HẾt row-->
</div>
